/* 全局样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.container {
  padding: 60rpx 40rpx 40rpx 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  margin: 16rpx 0;
  position: relative;
  overflow: hidden;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.btn:active::before {
  left: 100%;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.4);
}

.btn-secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.4);
}

.btn-success {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(86, 171, 47, 0.4);
}

.btn-success:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(86, 171, 47, 0.4);
}

.btn-warning {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
}

.btn-warning:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.4);
}

.btn-danger {
  background: linear-gradient(135deg, #ff7b7b 0%, #ff5722 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 123, 123, 0.4);
}

.btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 123, 0.4);
}

.btn-outline {
  background: transparent;
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.1);
}

.btn-outline:active {
  background: rgba(255, 255, 255, 0.1);
}

.btn-light {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  color: #2d3436;
  box-shadow: 0 8rpx 24rpx rgba(255, 234, 167, 0.4);
}

.btn-light:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 234, 167, 0.4);
}

.btn-confirm {
  background: linear-gradient(135deg, #11c582 0%, #00d4aa 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(17, 197, 130, 0.4);
}

.btn-confirm:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(17, 197, 130, 0.4);
}

.btn-exit {
  background: linear-gradient(135deg, #ff7b7b 0%, #ff5722 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 123, 123, 0.4);
}

.btn-exit:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 123, 0.4);
}

.btn-disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 24rpx 0;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

/* 标题样式 */
.title {
  color: #ffffff;
  font-size: 64rpx;
  font-weight: 700;
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.section-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* Toast样式 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  z-index: 9999;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 90%;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.3);
} 