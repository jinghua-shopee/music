/* app.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin: 10rpx;
}

.btn-active {
  background: #0056CC;
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-bottom: 40rpx;
} 