.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.direct-image-test {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.test-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.test-image {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.test-path {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.note-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
}

.note-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.note-index {
  font-size: 28rpx;
  color: #666;
}

.staff-container {
  margin-bottom: 40rpx;
}

.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx;
  padding: 0 20rpx;
}

.btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.test-content {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  padding: 40rpx;
}

.title {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 下载信息 */
.download-info {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
}

.info-text {
  display: block;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

/* 当前音符信息 */
.current-note {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
}

.note-title {
  display: block;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.note-info {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

/* 五线谱容器 */
.staff-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
}

/* 直接图片测试 */
.direct-image-test {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
}

.section-title {
  display: block;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.test-image {
  width: 100%;
  max-width: 400rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.image-path {
  display: block;
  color: rgba(255, 255, 255, 0.7);
  font-size: 20rpx;
  word-break: break-all;
  line-height: 1.4;
}

/* 谱号过滤 */
.clef-filter {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10px);
}

.clef-options {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.clef-option {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 12rpx 8rpx;
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.clef-option.active {
  background: rgba(255, 255, 255, 0.4);
  border-color: rgba(255, 255, 255, 0.6);
  transform: translateY(-2rpx);
}

.clef-option:active {
  transform: translateY(0);
}

/* 控制按钮 */
.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx;
  padding: 0 20rpx;
}

.controls .btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
}

.control-info {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

/* 调试控制 */
.debug-controls {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.debug-btn {
  font-size: 24rpx !important;
  padding: 10rpx 20rpx !important;
  min-width: 180rpx;
}

/* 音符列表 */
.note-list {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10px);
}

.notes {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.note-item {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  color: #ffffff;
  font-size: 20rpx;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  min-width: 140rpx;
}

.note-item.active {
  background: rgba(255, 255, 255, 0.4);
  border-color: rgba(255, 255, 255, 0.6);
  transform: translateY(-2rpx);
}

.note-item:active {
  transform: translateY(0);
}

.note-name {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.note-clef {
  font-size: 18rpx;
  opacity: 0.8;
  margin-bottom: 4rpx;
}

.note-position {
  font-size: 18rpx;
  opacity: 0.7;
} 