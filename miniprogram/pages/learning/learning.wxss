.learning-content {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 游戏信息 */
.game-info {
  margin-bottom: 40rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  font-weight: 600;
  color: #333;
}

.info-row .value {
  color: #667eea;
  font-weight: 600;
}

/* 音符显示区域 */
.note-display {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.staff-area,
.jianpu-area {
  flex: 1;
  text-align: center;
  min-height: 400rpx;
  max-height: 450rpx;
  width: calc(50% - 10rpx);
  box-sizing: border-box;
  overflow: hidden;
}

.area-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

/* 控制按钮 */
.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.control-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  min-width: 120rpx;
}

/* 学习页面专用按钮样式 - 覆盖全局样式 */
.controls .btn-primary {
  background: linear-gradient(135deg, #11c582 0%, #00d4aa 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(17, 197, 130, 0.4);
  font-weight: 600;
}

.controls .btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(17, 197, 130, 0.4);
}

.controls .btn-danger {
  background: linear-gradient(135deg, #ff7b7b 0%, #ff5722 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 123, 123, 0.4);
  font-weight: 600;
}

.controls .btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 123, 0.4);
}

/* 钢琴区域 */
.piano-area {
  margin-bottom: 0rpx;
}

/* 总结弹窗 */
.summary-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.summary-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.summary-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.summary-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stat-value.correct {
  color: #28a745;
}

.stat-value.wrong {
  color: #dc3545;
}

/* PK对比 */
.pk-comparison {
  margin-bottom: 40rpx;
}

.pk-stats-grid {
  margin-bottom: 32rpx;
}

.pk-stat-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-header {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.player-stat {
  flex: 2;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  position: relative;
}

.vs-divider {
  flex: 0 0 80rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #999;
}

.crown {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  font-size: 24rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.final-winner {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 总结操作按钮 */
.summary-actions {
  display: flex;
  gap: 24rpx;
}

.summary-actions .btn {
  flex: 1;
}

/* 弹窗按钮样式优化 */
.summary-actions .btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  font-weight: 600;
}

.summary-actions .btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.summary-actions .btn-danger {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
  font-weight: 600;
}

.summary-actions .btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.4);
}

/* 退出确认弹窗 */
.exit-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.exit-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.exit-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.exit-progress {
  text-align: center;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.progress-circle {
  width: 140rpx;
  height: 140rpx;
  border: 6rpx solid #667eea;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(102, 126, 234, 0.05));
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.3);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
  }
}

.progress-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #667eea;
  text-shadow: 0 2rpx 4rpx rgba(102, 126, 234, 0.1);
}

.progress-label {
  font-size: 22rpx;
  color: #667eea;
  margin-top: 4rpx;
  font-weight: 500;
}

.exit-message {
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.6;
  color: #666;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.exit-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 退出弹窗按钮样式 */
.exit-actions .btn-primary {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.4);
  font-weight: 600;
}

.exit-actions .btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.4);
}

.exit-actions .btn-outline {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  font-weight: 600;
}

.exit-actions .btn-outline:active {
  background: rgba(102, 126, 234, 0.1);
}

.exit-actions .btn-danger {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #8B4513;
  box-shadow: 0 8rpx 24rpx rgba(255, 236, 210, 0.4);
  font-weight: 600;
}

.exit-actions .btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 236, 210, 0.4);
}

/* 响应式设计 - 更小屏幕 */
@media (max-width: 600rpx) {
  .note-display {
    flex-direction: column;
    gap: 30rpx;
  }
  
  .staff-area,
  .jianpu-area {
    width: 100%;
    min-height: 300rpx;
    max-height: 350rpx;
  }
  
  .area-title {
    font-size: 28rpx;
    margin-bottom: 16rpx;
  }
  
  .controls {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .control-btn {
    width: 100%;
  }
}

.jianpu-display {
  text-align: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
}

.jianpu-note {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

/* 底部控制按钮 */
.control-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.control-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.2);
}

.control-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.control-btn.secondary {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #8B4513;
} 