.learning-content {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 游戏信息 */
.game-info {
  margin-bottom: 40rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  font-weight: 600;
  color: #333;
}

.info-row .value {
  color: #667eea;
  font-weight: 600;
}

/* 音符显示区域 */
.note-display {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.staff-area,
.jianpu-area {
  flex: 1;
  text-align: center;
  min-height: 400rpx;
  max-height: 450rpx;
  width: calc(50% - 10rpx);
  box-sizing: border-box;
  overflow: hidden;
}

.area-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

/* 控制按钮 */
.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.control-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  min-width: 120rpx;
}

/* 学习页面专用按钮样式 - 覆盖全局样式 */
.controls .btn-primary {
  background: linear-gradient(135deg, #11c582 0%, #00d4aa 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(17, 197, 130, 0.4);
  font-weight: 600;
}

.controls .btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(17, 197, 130, 0.4);
}

.controls .btn-danger {
  background: linear-gradient(135deg, #ff7b7b 0%, #ff5722 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 123, 123, 0.4);
  font-weight: 600;
}

.controls .btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 123, 0.4);
}

/* 钢琴区域 */
.piano-area {
  margin-bottom: 0rpx;
}

/* 总结弹窗 */
.summary-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.summary-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.celebration-emoji {
  animation: celebrate 2s ease-in-out infinite;
  transform-origin: center center;
}

@keyframes celebrate {
  0%, 100% { 
    transform: scale(1) rotate(0deg);
  }
  15% { 
    transform: scale(1.2) rotate(-5deg);
  }
  30% { 
    transform: scale(1.1) rotate(5deg);
  }
  45% { 
    transform: scale(1.15) rotate(-3deg);
  }
  60% { 
    transform: scale(1.05) rotate(3deg);
  }
  75% { 
    transform: scale(1.1) rotate(-1deg);
  }
  90% { 
    transform: scale(1.02) rotate(1deg);
  }
}

.summary-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.summary-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stat-value.correct {
  color: #28a745;
}

.stat-value.wrong {
  color: #dc3545;
}

/* PK对比 */
.pk-comparison {
  margin-bottom: 40rpx;
}

.pk-stats-grid {
  margin-bottom: 32rpx;
}

.pk-stat-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-header {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.player-stat {
  flex: 2;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  position: relative;
}

.vs-divider {
  flex: 0 0 80rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #999;
}

.crown {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  font-size: 24rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.final-winner {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 总结操作按钮 */
.summary-actions {
  display: flex;
  gap: 24rpx;
}

.summary-actions .btn {
  flex: 1;
}

/* 弹窗按钮样式优化 */
.summary-actions .btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  font-weight: 600;
}

.summary-actions .btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.summary-actions .btn-danger {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
  font-weight: 600;
}

.summary-actions .btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.4);
}

/* 退出确认弹窗 */
.exit-modal-content {
  background: #ffffff;
  border: none;
  position: relative;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.3);
}

.exit-modal-content::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, 
    rgba(102, 126, 234, 0.05) 0%, 
    transparent 20%, 
    transparent 80%, 
    rgba(102, 126, 234, 0.05) 100%);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(30deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(30deg); }
}

.exit-header {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
}

.thinking-emoji {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  animation: wiggle 2s ease-in-out infinite;
  transform-origin: center bottom;
}

@keyframes wiggle {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.exit-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  text-shadow: none;
}

.exit-progress {
  text-align: center;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
  z-index: 2;
}

.progress-circle {
  width: 160rpx;
  height: 160rpx;
  border: 6rpx solid #667eea;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(102, 126, 234, 0.05));
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
  backdrop-filter: blur(10px);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0px);
    box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
  }
  50% { 
    transform: translateY(-8rpx);
    box-shadow: 0 16rpx 40rpx rgba(102, 126, 234, 0.3);
  }
}

.progress-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
  text-shadow: none;
  line-height: 1;
}

.progress-label {
  font-size: 22rpx;
  color: #667eea;
  margin-top: 6rpx;
  font-weight: 500;
  text-shadow: none;
}

.exit-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
  z-index: 2;
}

/* 重新设计的按钮样式 */
.exit-actions .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.exit-actions .btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.exit-actions .btn:active::before {
  left: 100%;
}

.btn-report {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.4);
}

.btn-report:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.4);
}

.btn-continue {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #2c3e50;
  box-shadow: 0 8rpx 24rpx rgba(168, 237, 234, 0.4);
}

.btn-continue:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(168, 237, 234, 0.4);
}

.btn-quit {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  color: #2d3436;
  box-shadow: 0 8rpx 24rpx rgba(255, 234, 167, 0.4);
}

.btn-quit:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 234, 167, 0.4);
}

.btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1;
}

/* 响应式设计 - 更小屏幕 */
@media (max-width: 600rpx) {
  .note-display {
    flex-direction: column;
    gap: 30rpx;
  }
  
  .staff-area,
  .jianpu-area {
    width: 100%;
    min-height: 300rpx;
    max-height: 350rpx;
  }
  
  .area-title {
    font-size: 28rpx;
    margin-bottom: 16rpx;
  }
  
  .controls {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .control-btn {
    width: 100%;
  }
}

.jianpu-display {
  text-align: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
}

.jianpu-note {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

/* 底部控制按钮 */
.control-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.control-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.2);
}

.control-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.control-btn.secondary {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #8B4513;
} 