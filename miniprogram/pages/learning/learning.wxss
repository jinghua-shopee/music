@keyframes winnerGlow {
  0%, 100% { 
    transform: scale(1);
    box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.4);
  }
  50% { 
    transform: scale(1.15);
    box-shadow: 0 0 50rpx rgba(255, 215, 0, 1);
  }
}

@keyframes championDance {
  0%, 100% { 
    transform: scale(1.2) rotate(0deg);
    filter: drop-shadow(0 0 16rpx rgba(255, 215, 0, 0.8));
  }
