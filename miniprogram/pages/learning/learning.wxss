.learning-content {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 游戏信息 */
.game-info {
  margin-bottom: 40rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  font-weight: 600;
  color: #333;
}

.info-row .value {
  color: #667eea;
  font-weight: 600;
}

/* 音符显示区域 */
.note-display {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.staff-area,
.jianpu-area {
  flex: 1;
  text-align: center;
  min-height: 400rpx;
  max-height: 450rpx;
  width: calc(50% - 10rpx);
  box-sizing: border-box;
  overflow: hidden;
}

.area-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

/* 控制按钮 */
.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.control-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  min-width: 120rpx;
}

/* 钢琴区域 */
.piano-area {
  margin-bottom: 0rpx;
}

/* 调试信息区域 */
.debug-info {
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-left: 8rpx solid #007bff;
}

.debug-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #007bff;
  margin-bottom: 20rpx;
  text-align: center;
}

.debug-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.debug-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.debug-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.debug-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  background: #f8f9fa;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* 总结弹窗 */
.summary-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.summary-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.summary-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.summary-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stat-value.correct {
  color: #28a745;
}

.stat-value.wrong {
  color: #dc3545;
}

/* PK对比 */
.pk-comparison {
  margin-bottom: 40rpx;
}

.pk-stats-grid {
  margin-bottom: 32rpx;
}

.pk-stat-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-header {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.player-stat {
  flex: 2;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  position: relative;
}

.vs-divider {
  flex: 0 0 80rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #999;
}

.crown {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  font-size: 24rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.final-winner {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 总结操作按钮 */
.summary-actions {
  display: flex;
  gap: 24rpx;
}

.summary-actions .btn {
  flex: 1;
}

/* 退出确认弹窗 */
.exit-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.exit-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.exit-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.exit-progress {
  text-align: center;
  margin-bottom: 32rpx;
}

.progress-circle {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #667eea;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.progress-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
}

.progress-label {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

.exit-message {
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.6;
  color: #666;
}

.exit-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 响应式设计 - 更小屏幕 */
@media (max-width: 600rpx) {
  .note-display {
    flex-direction: column;
    gap: 30rpx;
  }
  
  .staff-area,
  .jianpu-area {
    width: 100%;
    min-height: 300rpx;
    max-height: 350rpx;
  }
  
  .area-title {
    font-size: 28rpx;
    margin-bottom: 16rpx;
  }
  
  .controls {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .control-btn {
    width: 100%;
  }
} 