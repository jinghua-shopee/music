.learning-content {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
}

/* 游戏信息 */
.game-info {
  margin-bottom: 40rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  font-weight: 600;
  color: #333;
}

.info-row .value {
  color: #667eea;
  font-weight: 600;
}

/* 音符显示区域 */
.note-display {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.staff-area,
.jianpu-area {
  flex: 1;
  text-align: center;
  min-height: 400rpx;
  max-height: 450rpx;
  width: calc(50% - 10rpx);
  box-sizing: border-box;
  overflow: hidden;
}

.area-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

/* 控制按钮 */
.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.control-btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  min-width: 120rpx;
}

/* 学习页面专用按钮样式 - 覆盖全局样式 */
.controls .btn-primary {
  background: linear-gradient(135deg, #11c582 0%, #00d4aa 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(17, 197, 130, 0.4);
  font-weight: 600;
}

.controls .btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(17, 197, 130, 0.4);
}

.controls .btn-exit {
  background: linear-gradient(135deg, #ff7b7b 0%, #ff5722 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 123, 123, 0.4);
  font-weight: 600;
}

.controls .btn-exit:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 123, 0.4);
}

.controls .btn-danger {
  background: linear-gradient(135deg, #ff7b7b 0%, #ff5722 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 123, 123, 0.4);
  font-weight: 600;
}

.controls .btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 123, 123, 0.4);
}

/* 钢琴区域 */
.piano-area {
  margin-bottom: 0rpx;
}

/* 总结弹窗 */
.summary-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.summary-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.celebration-emoji {
  animation: celebrate 2s ease-in-out infinite;
  transform-origin: center center;
}

@keyframes celebrate {
  0%, 100% { 
    transform: scale(1) rotate(0deg);
  }
  15% { 
    transform: scale(1.2) rotate(-5deg);
  }
  30% { 
    transform: scale(1.1) rotate(5deg);
  }
  45% { 
    transform: scale(1.15) rotate(-3deg);
  }
  60% { 
    transform: scale(1.05) rotate(3deg);
  }
  75% { 
    transform: scale(1.1) rotate(-1deg);
  }
  90% { 
    transform: scale(1.02) rotate(1deg);
  }
}

.summary-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.summary-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stat-value.correct {
  color: #28a745;
}

.stat-value.wrong {
  color: #dc3545;
}

/* PK对比 */
.pk-comparison {
  margin-bottom: 40rpx;
}

/* 玩家标识头部 */
.pk-players-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.player-header {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.player1-header .player-icon {
  font-size: 48rpx;
  animation: pulse 2s ease-in-out infinite;
}

.player2-header .player-icon {
  font-size: 48rpx;
  animation: pulse 2s ease-in-out infinite 0.5s;
}

@keyframes pulse {
  0%, 100% { 
    transform: scale(1);
    filter: brightness(1);
  }
  50% { 
    transform: scale(1.1);
    filter: brightness(1.2);
  }
}

.player-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 玩家名字颜色统一 */
.player1-header .player-name {
  color: #8e44ad;
}

.player2-header .player-name {
  color: #f39c12;
}

.vs-header {
  flex: 0 0 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
  animation: glow 2s ease-in-out infinite;
}

@keyframes glow {
  0%, 100% { 
    text-shadow: 2rpx 2rpx 4rpx rgba(231, 76, 60, 0.3);
  }
  50% { 
    text-shadow: 2rpx 2rpx 8rpx rgba(231, 76, 60, 0.6);
  }
}

.pk-stats-grid {
  margin-bottom: 32rpx;
}

.final-winner {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  overflow: hidden;
  animation: victoryPulse 2s ease-in-out infinite;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
}

.final-winner::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, 
    transparent 30%, 
    rgba(255, 255, 255, 0.1) 50%, 
    transparent 70%);
  animation: victoryShine 3s ease-in-out infinite;
  transform: rotate(45deg);
}

/* 获胜者文字动画效果 */
@keyframes victoryPulse {
  0%, 100% { 
    transform: scale(1);
    box-shadow: 
      0 8rpx 32rpx rgba(102, 126, 234, 0.4),
      0 0 0rpx rgba(255, 215, 0, 0);
  }
  50% { 
    transform: scale(1.02);
    box-shadow: 
      0 12rpx 40rpx rgba(102, 126, 234, 0.6),
      0 0 20rpx rgba(255, 215, 0, 0.3);
  }
}

@keyframes victoryShine {
  0% { 
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% { 
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

/* 总结操作按钮 */
.summary-actions {
  display: flex;
  gap: 24rpx;
}

.summary-actions .btn {
  flex: 1;
}

/* 弹窗按钮样式优化 */
.summary-actions .btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  font-weight: 600;
}

.summary-actions .btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.summary-actions .btn-danger {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.4);
  font-weight: 600;
}

.summary-actions .btn-danger:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.4);
}

/* 退出确认弹窗 */
.exit-modal-content {
  background: #ffffff;
  border: none;
  position: relative;
  overflow: hidden;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.3);
}

.exit-modal-content::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, 
    rgba(102, 126, 234, 0.05) 0%, 
    transparent 20%, 
    transparent 80%, 
    rgba(102, 126, 234, 0.05) 100%);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%) translateY(-100%) rotate(30deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(30deg); }
}

.exit-header {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
}

.thinking-emoji {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  animation: wiggle 2s ease-in-out infinite;
  transform-origin: center bottom;
}

@keyframes wiggle {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.exit-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  text-shadow: none;
}

.exit-progress {
  text-align: center;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
  z-index: 2;
}

.progress-circle {
  width: 160rpx;
  height: 160rpx;
  border: 6rpx solid #667eea;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(102, 126, 234, 0.05));
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
  backdrop-filter: blur(10px);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0px);
    box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
  }
  50% { 
    transform: translateY(-8rpx);
    box-shadow: 0 16rpx 40rpx rgba(102, 126, 234, 0.3);
  }
}

.progress-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
  text-shadow: none;
  line-height: 1;
}

.progress-label {
  font-size: 22rpx;
  color: #667eea;
  margin-top: 6rpx;
  font-weight: 500;
  text-shadow: none;
}

.exit-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
  z-index: 2;
}

/* 重新设计的按钮样式 */
.exit-actions .btn {
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.exit-actions .btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.exit-actions .btn:active::before {
  left: 100%;
}

.btn-continue {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-continue:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

/* 响应式设计 - 更小屏幕 */
@media (max-width: 600rpx) {
  .note-display {
    flex-direction: column;
    gap: 30rpx;
  }
  
  .staff-area,
  .jianpu-area {
    width: 100%;
    min-height: 300rpx;
    max-height: 350rpx;
  }
  
  .area-title {
    font-size: 28rpx;
    margin-bottom: 16rpx;
  }
  
  .controls {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .control-btn {
    width: 100%;
  }
}

.jianpu-display {
  text-align: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
}

.jianpu-note {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

/* 底部控制按钮 */
.control-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.control-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.2);
}

.control-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.control-btn.secondary {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #8B4513;
}

/* 响应式设计 */
@media screen and (max-width: 600rpx) {
  .piano-area {
    margin: 0 -32rpx;
    border-radius: 0;
  }
  
  .controls {
    margin: 0 -32rpx 32rpx;
    padding: 0 32rpx;
  }
}

/* ==================== 玩家切换增强体验样式 ==================== */

.player-switch-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.5s ease-out;
}

.switch-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  position: relative;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.6s ease-out;
}

/* 玩家切换倒计时 */
.player-switch-countdown {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: white;
}

.switch-header {
  margin-bottom: 40rpx;
}

.player-badge {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  animation: bounce 2s infinite;
}

.switch-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.switch-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 玩家1简要成绩 */
.player1-brief-stats {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
}

.brief-stats-label {
  display: block;
  font-size: 22rpx;
  margin-bottom: 12rpx;
  opacity: 0.8;
}

.brief-stats-row {
  display: flex;
  justify-content: space-around;
  gap: 24rpx;
}

.brief-stat {
  font-size: 24rpx;
  font-weight: bold;
}

/* 倒计时部分 */
.countdown-section {
  margin-bottom: 40rpx;
}

.countdown-number {
  font-size: 160rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  animation: countdownPulse 1s ease-in-out infinite;
}

.countdown-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 32rpx;
}

/* 开始按钮 */
.start-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.start-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { 
    transform: translateY(100rpx);
    opacity: 0;
  }
  to { 
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

@keyframes countdownPulse {
  0% { 
    transform: scale(1);
    opacity: 1;
  }
  50% { 
    transform: scale(1.1);
    opacity: 0.8;
  }
  100% { 
    transform: scale(1);
    opacity: 1;
  }
}

/* PK合并统计布局 */
.pk-combined-stats {
  background: #f8f9fa;
  border-radius: 0 0 20rpx 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.combined-stat-item {
  margin-bottom: 32rpx;
}

.combined-stat-item:last-child {
  margin-bottom: 0;
}

.stat-label {
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.stat-comparison {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.player-stat {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60rpx;
  white-space: nowrap;
}

.player1-stat {
  color: #8e44ad;
  background: linear-gradient(135deg, rgba(142, 68, 173, 0.1), rgba(142, 68, 173, 0.05));
  border-radius: 12rpx;
  padding: 16rpx 8rpx;
  border: 2rpx solid rgba(142, 68, 173, 0.2);
}

.player2-stat {
  color: #f39c12;
  background: linear-gradient(135deg, rgba(243, 156, 18, 0.1), rgba(243, 156, 18, 0.05));
  border-radius: 12rpx;
  padding: 16rpx 8rpx;
  border: 2rpx solid rgba(243, 156, 18, 0.2);
}

.vs-divider {
  flex: 0 0 60rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #999;
}

.crown {
  position: absolute;
  top: 50%;
  right: -8rpx;
  transform: translateY(-50%);
  font-size: 28rpx;
  animation: crownMajestic 3s ease-in-out infinite;
  transform-origin: center center;
  z-index: 10;
}

@keyframes crownMajestic {
  0% { 
    transform: translateY(-50%) scale(1) rotateY(0deg) rotateZ(0deg);
    filter: brightness(1) drop-shadow(0 0 4rpx rgba(255, 215, 0, 0.3));
  }
  20% { 
    transform: translateY(-50%) scale(1.2) rotateY(72deg) rotateZ(-5deg);
    filter: brightness(1.3) drop-shadow(0 0 8rpx rgba(255, 215, 0, 0.6));
  }
  40% { 
    transform: translateY(-50%) scale(1.4) rotateY(144deg) rotateZ(5deg);
    filter: brightness(1.5) drop-shadow(0 0 12rpx rgba(255, 215, 0, 0.8));
  }
  60% { 
    transform: translateY(-50%) scale(1.2) rotateY(216deg) rotateZ(-3deg);
    filter: brightness(1.3) drop-shadow(0 0 8rpx rgba(255, 215, 0, 0.6));
  }
  80% { 
    transform: translateY(-50%) scale(1.1) rotateY(288deg) rotateZ(2deg);
    filter: brightness(1.2) drop-shadow(0 0 6rpx rgba(255, 215, 0, 0.4));
  }
  100% { 
    transform: translateY(-50%) scale(1) rotateY(360deg) rotateZ(0deg);
    filter: brightness(1) drop-shadow(0 0 4rpx rgba(255, 215, 0, 0.3));
  }
}

/* 获胜者震撼动效 🏆 */
.player-header.winner {
  position: relative;
  animation: winnerGlow 2s ease-in-out infinite;
}

.winner-icon {
  position: relative;
  animation: championDance 2s ease-in-out infinite !important;
  filter: drop-shadow(0 0 16rpx rgba(255, 215, 0, 0.8));
  z-index: 5;
  transform: scale(1.2);
}

.winner-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle, 
    rgba(255, 215, 0, 0.5) 0%, 
    rgba(255, 215, 0, 0.2) 50%, 
    transparent 100%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: auraExpand 1.2s ease-in-out infinite;
  z-index: -1;
}

.winner-icon::after {
  content: '✨';
  position: absolute;
  top: -15rpx;
  left: -15rpx;
  font-size: 28rpx;
  animation: sparkle 0.8s ease-in-out infinite;
  z-index: 10;
  filter: drop-shadow(0 0 6rpx rgba(255, 215, 0, 0.8));
}

