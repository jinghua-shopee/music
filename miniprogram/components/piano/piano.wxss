.piano-container {
  width: 100%;
  overflow-x: auto;
  white-space: nowrap;
  padding: 20rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
}

.piano-keyboard {
  position: relative;
  height: 200rpx;
  width: 1850rpx; /* 扩展宽度以容纳C1-D6的所有键 */
  margin: 0 auto;
  background: #f8f9fa;
  border-radius: 8rpx;
  box-shadow: inset 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.piano-key {
  position: absolute;
  border-radius: 0 0 8rpx 8rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 20rpx;
  user-select: none;
}

/* 白键样式 */
.white-key {
  width: 48rpx;
  height: 180rpx;
  background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
  border: 2rpx solid #e0e0e0;
  border-radius: 0 0 8rpx 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  z-index: 1;
}

.white-key:active,
.white-key.selected {
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.white-key.highlight {
  background: linear-gradient(180deg, #28a745 0%, #20c997 100%);
  border-color: #28a745;
  box-shadow: 0 0 20rpx rgba(40, 167, 69, 0.5);
  animation: highlight-pulse 1s ease-in-out infinite alternate;
}

/* 黑键样式 */
.black-key {
  width: 32rpx;
  height: 120rpx;
  background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
  border: 2rpx solid #1a252f;
  border-radius: 0 0 6rpx 6rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.3);
  z-index: 2;
}

.black-key:active,
.black-key.selected {
  background: linear-gradient(180deg, #e74c3c 0%, #c0392b 100%);
  transform: translateY(4rpx);
  box-shadow: 0 3rpx 6rpx rgba(0,0,0,0.4);
}

.black-key.highlight {
  background: linear-gradient(180deg, #ffc107 0%, #fd7e14 100%);
  border-color: #ffc107;
  box-shadow: 0 0 20rpx rgba(255, 193, 7, 0.6);
  animation: highlight-pulse 1s ease-in-out infinite alternate;
}

/* 按键标签 */
.key-label {
  font-size: 20rpx;
  font-weight: 600;
  color: #666;
  pointer-events: none;
  text-align: center;
  line-height: 1;
}

.white-key.selected .key-label,
.white-key:active .key-label {
  color: white;
}

.black-key .key-label {
  color: #bdc3c7;
  font-size: 18rpx;
}

.black-key.selected .key-label,
.black-key:active .key-label {
  color: white;
}

.white-key.highlight .key-label,
.black-key.highlight .key-label {
  color: white;
  font-weight: 700;
}

/* 高亮动画 */
@keyframes highlight-pulse {
  0% { 
    box-shadow: 0 0 20rpx rgba(40, 167, 69, 0.5);
    transform: translateY(0);
  }
  100% { 
    box-shadow: 0 0 30rpx rgba(40, 167, 69, 0.8);
    transform: translateY(-2rpx);
  }
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .piano-keyboard {
    width: 1000rpx;
  }
  
  .white-key {
    width: 44rpx;
  }
  
  .black-key {
    width: 28rpx;
  }
  
  .key-label {
    font-size: 18rpx;
  }
  
  .black-key .key-label {
    font-size: 16rpx;
  }
} 