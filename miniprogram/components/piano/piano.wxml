<scroll-view class="piano-container" scroll-x="true" scroll-left="{{scrollLeft}}" scroll-with-animation="true">
  <view class="piano-keyboard">
    <!-- 白键 -->
    <view 
      wx:for="{{keys}}" 
      wx:key="key"
      wx:if="{{item.type === 'white'}}"
      class="piano-key white-key {{selectedKey === item.key ? 'selected' : ''}} {{highlightKey === item.key && showAnswer ? 'highlight' : ''}} {{item.key === 'c4' ? 'central-c' : ''}}"
      data-key="{{item.key}}"
      data-note="{{item.note}}"
      style="left: {{item.x}}rpx;"
      bindtap="onKeyTap"
    >
      <text class="key-label">{{item.note}}</text>
    </view>
    
    <!-- 黑键 -->
    <view 
      wx:for="{{keys}}" 
      wx:key="key"
      wx:if="{{item.type === 'black'}}"
      class="piano-key black-key {{selectedKey === item.key ? 'selected' : ''}} {{highlightKey === item.key && showAnswer ? 'highlight' : ''}}"
      data-key="{{item.key}}"
      data-note="{{item.note}}"
      style="left: {{item.x}}rpx;"
      bindtap="onKeyTap"
    >
      <text class="key-label">{{item.note}}</text>
    </view>
  </view>
</scroll-view> 