}

.low-dot {
  /* 低音点样式 */
}

.jianpu-hidden {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background: #f0f0f0;
  border: 4rpx dashed #ccc;
  border-radius: 50%;
}

.question-mark {
  font-size: 64rpx;
  font-weight: 700;
  color: #999;
}

.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999;
  font-size: 28rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
} 