.jianpu-container {
  width: 100%;
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}

.jianpu-note {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
  padding: 20rpx;
  animation: fadeIn 0.5s ease-in-out;
}

.high-dots {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 40rpx;
  justify-content: flex-end;
  margin-bottom: 8rpx;
}

.number-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.jianpu-number {
  font-size: 120rpx;
  font-weight: 700;
  color: #4facfe;
  text-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.3);
  line-height: 1;
}

.low-dots {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 40rpx;
  justify-content: flex-start;
  margin-top: 8rpx;
}

.dot {
  font-size: 32rpx;
  color: #4facfe;
  font-weight: 700;
  line-height: 1;
  margin: 2rpx 0;
}

