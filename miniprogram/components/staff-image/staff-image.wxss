.staff-image-container {
  width: 100%;
  height: 320rpx;
  position: relative;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.staff-image-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.staff-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.staff-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  opacity: 0.6;
  text-align: center;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.placeholder-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
} 