<view class="staff-image-container">
  <!-- 五线谱图片 -->
  <view wx:if="{{!showPlaceholder && staffImageSrc}}" class="staff-image-wrapper">
    <image 
      class="staff-image"
      src="{{staffImageSrc}}"
      mode="aspectFit"
      bindload="onImageLoad"
      binderror="onImageError"
      lazy-load="{{false}}"
      show-menu-by-longpress="{{false}}"
    />
  </view>
  
  <!-- 占位符 -->
  <view wx:if="{{showPlaceholder}}" class="staff-placeholder">
    <view class="placeholder-icon">🎼</view>
    <text class="placeholder-text">
      {{staffImageSrc ? '图片加载中...' : '等待音符...'}}
    </text>
  </view>
</view> 